<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="toro.grid_filter.number" class="Toro\Bundle\CmsBundle\Grid\Filter\NumberFilter">
            <tag name="sylius.grid_filter" type="number" form-type="Sylius\Bundle\GridBundle\Form\Type\Filter\StringFilterType" />
        </service>
        <service id="toro.grid_filter.multi_string" class="Toro\Bundle\CmsBundle\Grid\Filter\MultiStringFilter">
            <tag name="sylius.grid_filter" type="multi_string" form-type="Sylius\Bundle\GridBundle\Form\Type\Filter\StringFilterType" />
        </service>
        <service id="toro.grid_filter.extra_string" class="Toro\Bundle\CmsBundle\Grid\Filter\ExtraStringFilter">
            <tag name="sylius.grid_filter" type="extra_string" form-type="Sylius\Bundle\GridBundle\Form\Type\Filter\StringFilterType" />
        </service>
    </services>
</container>
